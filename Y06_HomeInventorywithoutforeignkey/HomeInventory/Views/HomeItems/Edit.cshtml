            @Html.ValidationMessageFor(model => model.PurchaseInfo.When, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PurchaseInfo.Where, htmlAttributes: new { @class = "control-label col-md-2" })
